<p id="notice"><%= notice %></p>


<p>
  <h4>Name:</h4>
  <%= @list.name %>
</p>

<p>
  <h2>Items:</h2>

<% if @items.length > 0 %>

  <table class="table table-bordered">
    <thead><tr>
      <th>Description</th>
      <th>Completed</th>
      <th>Complete?</th>
    </tr></thead>
    <tbody>
      <%= render @items.select {|x| not x.completed} %> <!-- This needs to be a if statement to showing non completed items -->
    </tbody>
  </table>
  <%= will_paginate @items %>
<% else %>
  You have no todo items!  Go get a beer!
<% end %>
</p>

<p>
  <h4>Create New Item:</h4>
<%= render partial: 'items/form', locals: { list: @list, item: @item } %>
<!-- todo: add "new item" form here; refer to new comment form in bloccit -->
</p>

<b><%= link_to 'Edit', edit_list_path(@list) %> |</b>
<b><%= link_to 'Back', lists_path %></b>


