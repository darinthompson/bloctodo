<tr class="main">
  <td>
    <%= item.description %>
  </td>
  <td>
    <%= item.completed ? "yes" : "No, Slacker" %>
  </td>
  <td>
    <%= simple_form_for(item) do |f| %>
      <%= f.hidden_field :completed, value: true %>
      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </td>
  <td>
    <%= "#{time_ago_in_words(item.created_at)} ago" %> 
  </td>
</tr>
